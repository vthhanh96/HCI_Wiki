<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.honghanh.hci_wiki.widgets.CustomViewTopBar
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="@dimen/normal"
                            android:layout_marginEnd="@dimen/large"
                            android:layout_marginStart="@dimen/large"
                            android:layout_marginTop="@dimen/normal"
                            android:src="@drawable/book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Văn Hồng Hà"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textAppearance="@style/TextAppearance.FontArsenalBold"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/normal"
                            android:paddingEnd="@dimen/large"
                            android:paddingStart="@dimen/large"
                            android:paddingTop="@dimen/normal"
                            android:text="@string/account_information"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/TextAppearance.FontArsenalBold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#f3f4f5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingBottom="@dimen/normal"
                                android:paddingEnd="@dimen/large"
                                android:paddingStart="@dimen/large"
                                android:paddingTop="@dimen/normal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textAppearance="@style/TextAppearance.FontArsenalRegular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="Văn Hồng Hà"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.FontPlayFairDisplayRegular"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginEnd="@dimen/large"
                                android:layout_marginStart="@dimen/large"
                                android:background="#f3f4f5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingBottom="@dimen/normal"
                                android:paddingEnd="@dimen/large"
                                android:paddingStart="@dimen/large"
                                android:paddingTop="@dimen/normal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email"
                                    android:textAppearance="@style/TextAppearance.FontArsenalRegular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="honghaa8@gmail.com"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.FontPlayFairDisplayRegular"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginEnd="@dimen/large"
                                android:layout_marginStart="@dimen/large"
                                android:background="#f3f4f5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/large"
                                android:paddingEnd="@dimen/large"
                                android:paddingTop="@dimen/normal"
                                android:paddingBottom="@dimen/normal"
                                android:background="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Facebook"
                                    android:textAppearance="@style/TextAppearance.FontArsenalRegular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="fb.com/vhha1996"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.FontPlayFairDisplayRegular"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/normal"
                            android:paddingEnd="@dimen/large"
                            android:paddingStart="@dimen/large"
                            android:paddingTop="@dimen/normal"
                            android:text="@string/my_account"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/TextAppearance.FontArsenalBold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#f3f4f5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_bookmark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingBottom="@dimen/normal"
                                android:paddingEnd="@dimen/large"
                                android:paddingStart="@dimen/large"
                                android:paddingTop="@dimen/normal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bookmark"
                                    android:textAppearance="@style/TextAppearance.FontArsenalRegular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text=">"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginEnd="@dimen/large"
                                android:layout_marginStart="@dimen/large"
                                android:background="#f3f4f5" />

                            <LinearLayout
                                android:id="@+id/ll_history"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingBottom="@dimen/normal"
                                android:paddingEnd="@dimen/large"
                                android:paddingStart="@dimen/large"
                                android:paddingTop="@dimen/normal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="History"
                                    android:textAppearance="@style/TextAppearance.FontArsenalRegular"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text=">"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <include layout="@layout/layout_menu" />
</android.support.v4.widget.DrawerLayout>